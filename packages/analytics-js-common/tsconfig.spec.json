{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "./",
    "outDir": "../../dist/out-tsc",
    "module": "commonjs",
    "noEmit": true,
    "sourceMap": true,
    "inlineSourceMap": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": false,
    "types": ["jest", "node"],
    "target": "es6"
  },
  "include": [
    "./jest.config.mjs",
    "./__tests__/**/*",
    "./__mocks__/**/*",
    "./__fixtures__/**/*",
    "./package.json",
    "./src/**/*",
    "../../types/**/*"
  ]
}
